                    <div class="movable widget ProfileWidget" id="widget-24"
                         style=" left: 600px; top: 20px; z-index: 35;">
                        <div class="w_skin_goldenskin">
                            <div class="widget-corner" id="widget-24-handle">
                                <img class="edit-button" id="widget-24-edit-btn"
                                     src="/images/myhabbo/icon_edit.gif"
                                     onclick="openEditMenu(event, 24, 'widget', 'widget-24-edit-btn', null)" />
