                                        <div style="width:50%">
                                            <h4>{{text.index.box5.snowstorm}}</h4>
                                            <ol style="text-align: left;">
                                                {{#each snowstormPlayers}}
                                                    <li>{{this.username}} ({{this.points}})</li>
                                                {{/each}}
                                            </ol>
                                        </div>
                                        <div style="width:50%">
                                            <h4>{{text.index.box5.battleball}}</h4>
                                            <ol style="text-align: left;">
                                                {{#each battleballPlayers}}
                                                    <li>{{this.username}} ({{this.points}})</li>
                                                {{/each}}
                                            </ol>
                                        </div>
                                    </div>
                                </div>
                                <div class="bottom">
                                    <div></div>
                                </div>
                            </div>

                            <div class="v2box blue light">
                                <div class="headline">
                                    <h3>{{text.global.ad}}</h3>
                                </div>
                                <div class="border">
                                    <div></div>
                                </div>
                                <div class="body">
                                    <a href="#" target="_blank">
                                        <img src="images/a_img/03.png" width="300" height="250">
                                    </a>
                                </div>
                                <div class="bottom">
                                    <div></div>
                                </div>
                            </div>

                        </td>

                    </tr>
                    </tbody>
                </table>
            </td>
            <td rowspan="2" style="width: 4px;"></td>
            {{>main/ad}}
        </tr>
        </tbody>
    </table>
    <br style="clear: both;"/>
